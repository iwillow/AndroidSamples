<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iwillow.app.samples.ui.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_step_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_step_activity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_color_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_color_scale_activity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_movie_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_movie_gallery_activity" />

        <Button
            android:id="@+id/btn_simple_remote_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_simple_remote_control_activity" />

        <Button
            android:id="@+id/btn_cool_remote_control_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_cool_remote_control_a_activity" />

        <Button
            android:id="@+id/btn_cool_remote_control_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_cool_remote_control_b_activity" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
