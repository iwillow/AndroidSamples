<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iwillow.app.samples">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.StepActivity"
            android:label="@string/name_step_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MovieGalleryActivity"
            android:label="@string/name_movie_gallery_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ColorScaleActivity"
            android:label="@string/name_color_scale_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SimpleRemoteControlActivity"
            android:label="@string/name_simple_remote_control_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CoolARemoteControlActivity"
            android:label="@string/name_cool_remote_control_a_activity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".ui.CoolBRemoteControlActivity"
            android:label="@string/name_cool_remote_control_b_activity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>